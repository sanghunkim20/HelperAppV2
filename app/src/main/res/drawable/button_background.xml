<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- 버튼 배경 색상 -->
                    <corners android:radius="8dp" /> <!-- 버튼의 모서리를 둥글게 설정 -->
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#80000000" /> <!-- 그림자 색상 -->
                    <corners android:radius="8dp" /> <!-- 그림자의 모서리를 둥글게 설정 -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
